<p>
  <strong> Title: </strong>
    <%= @article.title %>
</p>
<p>
  <strong> Text: </strong>
    <%= @article.text %>
</p>
<p>
  <strong> Created at: </strong>
    <%= @article.created_at %>
</p>
<p>
  <strong> Updated at: </strong>
    <%= @article.updated_at %>
</p>

<%= form_for(@article.comments.build) do |f| %>
<p>
  <%= f.label :commenter %>
  <%= f.text_field :commenter %>
</p>
<p>
  <%= f.label :body %>
  <%= f.text_label :body %>
</p>
<p>
  <%= f.submit  %>
</p>
<% end %>

<%= link_to "Back", articles_path %>
<td><%= link_to "Edit", edit_article_path(@article) %></td>
